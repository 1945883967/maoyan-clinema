<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.TheaterTMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.TheaterT">
        <id column="UUID" property="uuid"/>
        <result column="theater_name" property="theaterName"/>
        <result column="theater_phone" property="theaterPhone"/>
        <result column="area_id" property="areaId"/>
        <result column="img_address" property="imgAddress"/>
        <result column="theater_address" property="theaterAddress"/>
    </resultMap>

    <resultMap id="theaterVO" type="com.stylefeng.guns.rest.modular.controller.theater.vo.ResponseTheaterVO">
        <id column="UUID" property="uuid"/>
        <result column="theaterName" property="theaterName"/>
        <result column="theaterPhone" property="theaterPhone"/>
        <result column="area" property="area"/>
        <result column="imgAddress" property="imgAddress"/>
        <result column="theaterAddress" property="theaterAddress"/>
    </resultMap>

    <select id="selectAllTheater" resultMap="theaterVO">
        SELECT
            t.UUID AS UUID,
            t.theater_name AS theaterName,
            t.theater_phone AS theaterPhone,
            a.show_name AS area,
            t.img_address AS imgAddress,
            t.theater_address AS theaterAddress
        FROM theater_t t, area_dict_t a
        WHERE t.area_id = a.UUID
        <if test="theaterName != null">
            AND t.theater_name like CONCAT("%",#{theaterName},"%")
        </if>
        <if test="areaId != null">
            AND t.area_id = #{areaId}
        </if>
        LIMIT #{nowPage},#{pageSize}
    </select>
</mapper>
