<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.HallFilmInfoTMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.HallFilmInfoT">
        <id column="UUID" property="uuid" />
        <result column="film_id" property="filmId" />
        <result column="film_name" property="filmName" />
        <result column="film_length" property="filmLength" />
        <result column="film_cats" property="filmCats" />
        <result column="film_language" property="filmLanguage" />
        <result column="actors" property="actors" />
        <result column="img_address" property="imgAddress" />
    </resultMap>

    <select id="selectHallInfoByFilmId" resultMap="BaseResultMap" parameterType="integer">
        SELECT *
        FROM hall_film_info_t
        WHERE film_id = #{filmId}
    </select>

    <select id="deleteByFilmId" parameterType="integer" resultType="integer">
        DELETE FROM hall_film_info_t WHERE film_id = #{filmId}
    </select>

</mapper>
